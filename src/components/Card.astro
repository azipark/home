---
export type Props = {
  to: string;
  title: string;
  gradientFrom: string;
  gradientTo: string;
};

const { to, title, gradientFrom, gradientTo } = Astro.props;
---

<a
  href={to}
  class={`card relative p-1 min-w-60 rounded-md transition-transform duration-200 ease-in-out hover:scale-95`}
  style={{
    backgroundImage: `linear-gradient(to right, ${gradientFrom}, ${gradientTo})`,
  }}
>

<!-- min-w-20 -->
  <div
    class="card-inner bg-white dark:bg-[#18181b] p-4 rounded-md flex flex-col"
  >
    <div
      class="card-title text-gray-900 dark:text-gray-100 font-medium text-md leading-7 text-center"
    >
      {title}
    </div>
  </div>
</a>